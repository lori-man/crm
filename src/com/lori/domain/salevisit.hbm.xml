<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.lori.domain.SaleVisit" table="sale_visit">
        <id name="visit_id" column="visit_id">
            <generator class="uuid"></generator>
        </id>
        <property name="visit_addr" column="visit_addr"></property>
        <property name="visit_detail" column="visit_detail"></property>
        <property name="visit_time" column="visit_time"></property>
        <property name="visit_nextTime" column="visit_nexttime"></property>

        <many-to-one name="customer" column="visit_cust_id" class="com.lori.domain.Customer"/>
        <many-to-one name="user" column="visit_user_id" class="com.lori.domain.User"/>
    </class>
</hibernate-mapping>